{
  "name": "arion",
  "description": "Ghost Payroll - Private crypto salary distribution on Solana",
  "keywords": [
    "anchor",
    "kit",
    "nextjs",
    "react",
    "solana-kit",
    "tailwind",
    "typescript"
  ],
  "create-solana-dapp": {
    "rename": {
      "scaffold": {
        "to": "{{name}}",
        "paths": [
          "app"
        ]
      }
    }
  },
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "anchor-build": "cd anchor && anchor build",
    "anchor-test": "cd anchor && anchor test --skip-deploy",
    "build": "next build --webpack",
    "ci": "npm run build && npm run lint && npm run format:check",
    "codama:js": "codama run js",
    "dev": "next dev --webpack",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint",
    "setup": "npm run anchor-build && npm run codama:js",
    "start": "next start",
    "postinstall": "cp node_modules/@lightprotocol/hasher.rs/dist/hasher_wasm_simd_bg.wasm node_modules/@lightprotocol/hasher.rs/dist/browser-fat/es/ && cp node_modules/@lightprotocol/hasher.rs/dist/light_wasm_hasher_bg.wasm node_modules/@lightprotocol/hasher.rs/dist/browser-fat/es/"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@lightprotocol/hasher.rs": "^0.2.1",
    "@phosphor-icons/react": "^2.1.10",
    "@radr/shadowwire": "^1.1.15",
    "@solana/client": "^1.2.0",
    "@solana/kit": "^5.1.0",
    "@solana/react-hooks": "^1.1.5",
    "@solana/spl-token": "^0.4.14",
    "@solana/wallet-adapter-phantom": "^0.9.28",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/wallet-adapter-solflare": "^0.6.32",
    "@supabase/supabase-js": "^2.91.1",
    "bn.js": "^5.2.2",
    "bs58": "^6.0.0",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "ffjavascript": "^0.3.1",
    "lucide-react": "^0.563.0",
    "next": "16.0.10",
    "next-themes": "^0.4.6",
    "privacycash": "^1.1.11",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "snarkjs": "^0.7.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@codama/nodes-from-anchor": "^1.3.8",
    "@codama/renderers-js": "^1.5.5",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "codama": "^1.5.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "path-browserify": "^1.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
